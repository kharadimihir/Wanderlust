<% layout("layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h2>
                <%= listing.title %>
            </h2>
        </div>
        <div class="card col-6 offset-3  show-card listing-card">
            <img src=<%=listing.image %> class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                <p>Owned by <%= listing.owner.username %>
                </p>
                <br>
                <%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                        <%= listing.location %> <br>
                            <%= listing.country %> <br>
                                </p>
            </div>
        </div>
        <br>
        <div class="btns">
            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3  edit-btn">Edit</a>
                <form method="POST" action="/listing/<%= listing._id %>/delete?_method=DELETE">
                    <button class="btn btn-dark offset-3 ">Delete</button>
                </form>
                <% } %>
        </div>
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a review</h4>
            <form action="/listing/<%= listing._id %>/" method="post" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" , max="5" name="review[rating]" class="form-range" required>
                </div>
                <div class=" mt-3 mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="20"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please add a comment for review
                    </div>
                </div>
                <div>
                    <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(let review of listing.reviews){ %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username %></h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                        </div>
                        <form class="mb-3 mt-3"
                            action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                            <button class="btn bnt-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>

    </div>